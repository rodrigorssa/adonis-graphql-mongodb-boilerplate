{
  "name": "adonisjs-boilerplate",
  "version": "1.0.0",
  "adonis-version": "4.1.0",
  "description": "AdonisJs api-only boilerplate with mongodb, redis, graphql, authentication and swagger",
  "main": "server.js",
  "prefix": "/api",
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "dev": "adonis serve --dev",
    "update:dependencies": "rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/auth": "^3.0.7",
    "@adonisjs/bodyparser": "^2.0.9",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/ignitor": "^2.0.8",
    "adonis-swagger": "^1.2.9",
    "apollo-server-adonis": "^1.4.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "lucid-mongo": "^3.1.6",
    "redis": "^3.1.1"
  },
  "devDependencies": {
    "jest": "^26.6.3"
  },
  "autoload": {
    "App": "./app",
    "Config": "./config",
    "Redis": "./app/Services/cache.js"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
